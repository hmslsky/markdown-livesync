{
  "name": "markdown-livesync",
  "displayName": "Markdown LiveSync",
  "description": "实时同步Markdown编辑与VSCode内置预览，支持目录导航、光标同步和Mermaid图表渲染",
  "version": "0.0.18",
  "publisher": "hmslsky",
  "author": "hmslsky",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/hmslsky/markdown-livesync.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "markdown-livesync.openPreview",
        "title": "Markdown LiveSync: Preview"
      },
      {
        "command": "markdown-livesync.openPreviewToSide",
        "title": "Markdown LiveSync: Preview to Side"
      },
      {
        "command": "markdown-livesync.toggleDebugTools",
        "title": "Markdown LiveSync: Toggle Debug Tools"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == markdown",
          "command": "markdown-livesync.openPreview",
          "group": "navigation"
        },
        {
          "when": "editorLangId == markdown",
          "command": "markdown-livesync.openPreviewToSide",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markdown-livesync.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == markdown"
      },
      {
        "command": "markdown-livesync.toggleDebugTools",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorLangId == markdown"
      }
    ],
    "configuration": {
      "title": "Markdown LiveSync",
      "properties": {
        "markdown-livesync.preview": {
          "type": "object",
          "properties": {
            "defaultView": {
              "type": "string",
              "enum": ["side", "window"],
              "default": "side",
              "description": "预览面板的默认显示位置"
            },
            "showToc": {
              "type": "boolean",
              "default": true,
              "description": "是否显示目录导航"
            },
            "syncScroll": {
              "type": "boolean",
              "default": true,
              "description": "是否同步滚动"
            },
            "highlightOnScroll": {
              "type": "boolean",
              "default": true,
              "description": "滚动到指定位置时是否高亮显示目标元素"
            }
          }
        },
        "markdown-livesync.toc": {
          "type": "object",
          "properties": {
            "defaultCollapseLevel": {
              "type": "number",
              "default": 1,
              "description": "目录默认折叠级别"
            },
            "showToggleButton": {
              "type": "boolean",
              "default": true,
              "description": "是否显示折叠按钮"
            },
            "highlightCurrentItem": {
              "type": "boolean",
              "default": true,
              "description": "是否高亮当前目录项"
            },
            "rememberCollapseState": {
              "type": "boolean",
              "default": true,
              "description": "是否记住目录折叠状态"
            }
          }
        },
        "markdown-livesync.theme": {
          "type": "object",
          "properties": {
            "current": {
              "type": "string",
              "enum": ["light", "dark"],
              "default": "light",
              "description": "当前使用的主题：浅色或深色"
            },
            "custom": {
              "type": "object",
              "properties": {
                "light": {
                  "type": "object",
                  "properties": {
                    "textColor": {
                      "type": "string",
                      "default": "#24292e",
                      "description": "浅色主题文本颜色"
                    },
                    "backgroundColor": {
                      "type": "string",
                      "default": "#ffffff",
                      "description": "浅色主题背景颜色"
                    },
                    "borderColor": {
                      "type": "string",
                      "default": "#e1e4e8",
                      "description": "浅色主题边框颜色"
                    },
                    "linkColor": {
                      "type": "string",
                      "default": "#0366d6",
                      "description": "浅色主题链接颜色"
                    },
                    "codeBackground": {
                      "type": "string",
                      "default": "#f6f8fa",
                      "description": "浅色主题代码背景颜色"
                    },
                    "sidebarBackground": {
                      "type": "string",
                      "default": "#f6f8fa",
                      "description": "浅色主题侧边栏背景颜色"
                    },
                    "tocLevel1Color": {
                      "type": "string",
                      "default": "#24292e",
                      "description": "浅色主题一级标题颜色"
                    },
                    "tocLevel2Color": {
                      "type": "string",
                      "default": "#586069",
                      "description": "浅色主题二级标题颜色"
                    },
                    "tocLevel3Color": {
                      "type": "string",
                      "default": "#6a737d",
                      "description": "浅色主题三级标题颜色"
                    }
                  }
                },
                "dark": {
                  "type": "object",
                  "properties": {
                    "textColor": {
                      "type": "string",
                      "default": "#e1e4e8",
                      "description": "深色主题文本颜色"
                    },
                    "backgroundColor": {
                      "type": "string",
                      "default": "#0d1117",
                      "description": "深色主题背景颜色"
                    },
                    "borderColor": {
                      "type": "string",
                      "default": "#30363d",
                      "description": "深色主题边框颜色"
                    },
                    "linkColor": {
                      "type": "string",
                      "default": "#58a6ff",
                      "description": "深色主题链接颜色"
                    },
                    "codeBackground": {
                      "type": "string",
                      "default": "#161b22",
                      "description": "深色主题代码背景颜色"
                    },
                    "sidebarBackground": {
                      "type": "string",
                      "default": "#161b22",
                      "description": "深色主题侧边栏背景颜色"
                    },
                    "tocLevel1Color": {
                      "type": "string",
                      "default": "#f0f6fc",
                      "description": "深色主题一级标题颜色"
                    },
                    "tocLevel2Color": {
                      "type": "string",
                      "default": "#e1e4e8",
                      "description": "深色主题二级标题颜色"
                    },
                    "tocLevel3Color": {
                      "type": "string",
                      "default": "#8b949e",
                      "description": "深色主题三级标题颜色"
                    }
                  }
                }
              }
            }
          }
        },
        "markdown-livesync.performance": {
          "type": "object",
          "properties": {
            "chunkSize": {
              "type": "number",
              "default": 1000,
              "description": "分块渲染大小"
            },
            "cacheSize": {
              "type": "number",
              "default": 100,
              "description": "缓存大小"
            },
            "lazyLoad": {
              "type": "boolean",
              "default": true,
              "description": "是否启用懒加载"
            }
          }
        },
        "markdown-livesync.debug": {
          "type": "boolean",
          "default": false,
          "description": "启用调试日志"
        },
        "markdown-livesync.mermaid": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "是否启用Mermaid图表功能"
            },
            "theme": {
              "type": "string",
              "enum": ["default", "dark", "forest", "neutral"],
              "default": "default",
              "description": "Mermaid图表主题"
            },
            "enableZoom": {
              "type": "boolean",
              "default": true,
              "description": "是否启用图表缩放控制"
            },
            "enableFullscreen": {
              "type": "boolean",
              "default": true,
              "description": "是否启用图表全屏功能"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/linkify-it": "^3.0.2",
    "@types/markdown-it": "^12.0.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^11.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "markdown-it": "^12.3.2",
    "entities": "~2.1.0",
    "argparse": "^2.0.1",
    "linkify-it": "^3.0.1",
    "mdurl": "^1.0.1",
    "uc.micro": "^1.0.5"
  }
}
